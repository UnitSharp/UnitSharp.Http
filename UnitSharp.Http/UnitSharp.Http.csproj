<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>UnitSharp.Http</PackageId>
    <Description>Provides test doubles for HttpMessageHandler.</Description>
    <Version>0.1.0</Version>
    <Authors>Gyuwon</Authors>
    <Copyright>Copyright (c) 2020 Yi Gyuwon</Copyright>
    <PackageProjectUrl>https://github.com/UnitSharp/UnitSharp.Http</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Primitives" Version="3.1.8" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.1" />
  </ItemGroup>

</Project>
